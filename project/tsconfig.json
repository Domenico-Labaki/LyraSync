{
  "compilerOptions": {
    /* Language & Output */
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "outDir": "dist",
    "sourceMap": true,

    /* Module System */
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* React */
    "jsx": "react-jsx",

    /* Interop & Safety */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Types */
    "types": ["node", "electron"],

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  "include": ["src"]
}
